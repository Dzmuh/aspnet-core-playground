@using TheUgly.Controllers
@model MovieModel
@{
    ViewData["Title"] = "Способ первый: Уродливый";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="display-4">Welcome</h1>
        @using (Html.BeginForm(FormMethod.Post))
        {
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GenreId, new { @class = "col-md-2 control-label" })
                @{
                    var selectList = from genre in Data.GetGenres() select new SelectListItem { Text = genre.Name, Value = genre.Id.ToString() };
                }
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.GenreId, selectList, "choose")
                    @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
                </div>
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        }
    </div>
</div>
